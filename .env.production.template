# Production Environment Configuration Template
# NOTE: This is a template - Copy to .env.production and fill with actual values
# DO NOT commit actual production values to version control

# ==========================================
# APPLICATION SETTINGS
# ==========================================
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1
PORT=3000

# ==========================================
# WOOCOMMERCE INTEGRATION
# ==========================================
NEXT_PUBLIC_WC_API_URL=https://your-production-domain.com/wp-json/wc/v3
WC_CONSUMER_KEY=ck_XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
WC_CONSUMER_SECRET=cs_XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# ==========================================
# DATABASE CONFIGURATIONS
# ==========================================

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_super_secure_redis_password

# Memgraph Configuration
MEMGRAPH_URL=bolt://memgraph:7687
MEMGRAPH_USER=your_memgraph_user
MEMGRAPH_PASSWORD=your_super_secure_memgraph_password

# Qdrant Configuration
QDRANT_URL=http://qdrant:6333
QDRANT_API_KEY=your_super_secure_qdrant_api_key

# Analytics Database (PostgreSQL)
ANALYTICS_DB_HOST=postgres
ANALYTICS_DB_PORT=5432
ANALYTICS_DB_NAME=agriko_analytics
ANALYTICS_DB_USER=postgres
ANALYTICS_DB_PASSWORD=your_super_secure_postgres_password

# ==========================================
# SECURITY & AUTHENTICATION
# ==========================================

# Webhook Security
WEBHOOK_SECRET=your_super_secure_webhook_secret_min_32_chars

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_min_64_chars
JWT_EXPIRES_IN=24h

# Session Management
SESSION_SECRET=your_super_secure_session_secret_min_32_chars

# ==========================================
# FEATURE FLAGS
# ==========================================
ENABLE_AUTO_PERSISTENCE=true
ENABLE_REAL_TIME_SYNC=true
ENABLE_BULK_SYNC=true
ENABLE_ADVANCED_TRACKING=true
ENABLE_PERFORMANCE_MONITORING=true

# ==========================================
# MONITORING & LOGGING
# ==========================================

# Log Level (error, warn, info, debug)
LOG_LEVEL=warn
LOG_CONTEXTS=api,webhook,sync,error

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
PERFORMANCE_THRESHOLD_MS=1000

# Memory Monitoring
MEMORY_WARNING_THRESHOLD_MB=45
MEMORY_CRITICAL_THRESHOLD_MB=50

# ==========================================
# RATE LIMITING
# ==========================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WEBHOOK_MAX=20

# ==========================================
# CACHE CONFIGURATION
# ==========================================
CACHE_TTL_DEFAULT=300000
CACHE_TTL_PRODUCT=600000
CACHE_TTL_SEARCH=180000
CACHE_MAX_SIZE=1000

# ==========================================
# SECURITY HEADERS
# ==========================================
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com
CORS_CREDENTIALS=true

# ==========================================
# DEPLOYMENT SPECIFIC
# ==========================================

# Container Health Check
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_INTERVAL=30000

# Graceful Shutdown
SHUTDOWN_TIMEOUT=10000

# ==========================================
# BACKUP & RECOVERY
# ==========================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30