# ==================================================
# AGRIKO PRODUCTION ENVIRONMENT CONFIGURATION
# ==================================================
# Copy this file to .env.production and fill in your actual values
# NEVER commit actual credentials to version control

# ==================================================
# APPLICATION BASICS
# ==================================================
NODE_ENV=production
PORT=3000
NEXT_PUBLIC_SITE_URL=https://your-domain.com

# ==================================================
# AUTHENTICATION & SECURITY
# ==================================================
# JWT Secret - MUST be changed in production (256-bit minimum)
JWT_SECRET=your-super-secure-256-bit-secret-key-here

# Admin credentials for basic auth fallback
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-secure-admin-password

# Session management
SESSION_SECRET=your-session-secret-key-here

# ==================================================
# REDIS CONFIGURATION (Session Storage)
# ==================================================
# Redis connection string - Required for production session storage
REDIS_URL=redis://localhost:6379
# Alternative format: redis://username:password@host:port
# For Redis Cloud: redis://default:password@host:port
# For AWS ElastiCache: rediss://clustercfg.your-cluster.region.cache.amazonaws.com:6380

# Optional Redis configuration
REDIS_PASSWORD=your-redis-password
REDIS_DATABASE=0
REDIS_CONNECTION_TIMEOUT=10000
REDIS_COMMAND_TIMEOUT=5000

# ==================================================
# REMOTE LOGGING CONFIGURATION
# ==================================================
# Enable remote logging in production
ENABLE_REMOTE_LOGGING=true

# Log levels to send remotely (comma-separated)
REMOTE_LOG_LEVELS=warn,error

# Logging configuration
LOGGING_BATCH_SIZE=10
LOGGING_FLUSH_INTERVAL=30000
LOGGING_RETRY_ATTEMPTS=3
LOGGING_RETRY_DELAY=5000
LOGGING_BUFFER_LIMIT=1000

# ==================================================
# DATADOG INTEGRATION (Optional)
# ==================================================
# Get these from your Datadog account
DATADOG_API_KEY=your-datadog-api-key
DATADOG_SITE=datadoghq.com
# Other sites: datadoghq.eu, us3.datadoghq.com, us5.datadoghq.com

# ==================================================
# SPLUNK INTEGRATION (Optional)
# ==================================================
# Splunk HTTP Event Collector (HEC) configuration
SPLUNK_URL=https://your-splunk-instance.com
SPLUNK_TOKEN=your-splunk-hec-token

# ==================================================
# ELASTICSEARCH INTEGRATION (Optional)
# ==================================================
# Elasticsearch logging configuration
ELASTICSEARCH_URL=https://your-elasticsearch-cluster.com
ELASTICSEARCH_INDEX=agriko-logs
ELASTICSEARCH_API_KEY=your-elasticsearch-api-key

# ==================================================
# CUSTOM WEBHOOK LOGGING (Optional)
# ==================================================
# Custom webhook for logging
LOGGING_WEBHOOK_URL=https://your-logging-webhook.com/logs
CUSTOM_LOGGING_URL=https://your-custom-logging-service.com/api/logs
CUSTOM_LOGGING_AUTH=Bearer your-auth-token

# ==================================================
# CACHE MEMORY MANAGEMENT
# ==================================================
# Global cache memory limit in MB
MAX_CACHE_MEMORY_MB=200

# Cache thresholds (percentage)
CACHE_WARNING_THRESHOLD=80
CACHE_CRITICAL_THRESHOLD=90

# Cache monitoring intervals (milliseconds)
CACHE_MONITORING_INTERVAL=30000
CACHE_EMERGENCY_CLEANUP_INTERVAL=5000

# Maximum number of cache instances
MAX_CACHE_INSTANCES=20

# ==================================================
# EMBEDDING MODEL CONFIGURATION
# ==================================================
# Model initialization settings
EMBEDDING_MODEL_PRELOAD=true
EMBEDDING_MODEL_TIMEOUT=60000
EMBEDDING_MAX_RETRIES=3
EMBEDDING_RETRY_DELAY=5000

# ==================================================
# MONITORING & HEALTH CHECKS
# ==================================================
# Health check configuration
HEALTH_CHECK_TIMEOUT=10000
ENABLE_DETAILED_HEALTH_CHECKS=true

# Monitoring intervals
MONITORING_INTERVAL=60000
METRICS_RETENTION_HOURS=24

# ==================================================
# WOOCOMMERCE API CONFIGURATION
# ==================================================
NEXT_PUBLIC_WC_API_URL=https://your-woocommerce-site.com/wp-json/wc/v3
WC_CONSUMER_KEY=ck_your_consumer_key
WC_CONSUMER_SECRET=cs_your_consumer_secret

# ==================================================
# DATABASE CONFIGURATION (if using database sessions)
# ==================================================
# Alternative to Redis for session storage
DATABASE_URL=postgresql://username:password@host:port/database
# or MongoDB: mongodb://username:password@host:port/database

# ==================================================
# RATE LIMITING
# ==================================================
# Rate limiting configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_STORE_TYPE=redis

# ==================================================
# SSL/TLS CONFIGURATION
# ==================================================
# Force HTTPS in production
FORCE_HTTPS=true
HSTS_MAX_AGE=31536000

# ==================================================
# PERFORMANCE TUNING
# ==================================================
# Memory limits for different components
NODE_MAX_OLD_SPACE_SIZE=2048
UV_THREADPOOL_SIZE=8

# Next.js optimization
NEXT_TELEMETRY_DISABLED=1
ANALYZE_BUNDLE=false

# ==================================================
# DEPLOYMENT CONFIGURATION
# ==================================================
# For container orchestration
INSTANCE_ID=web-1
CLUSTER_NAME=agriko-production
REGION=us-west-2

# Load balancer health check path
HEALTH_CHECK_PATH=/api/health

# ==================================================
# BACKUP & RECOVERY
# ==================================================
# Backup configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30

# ==================================================
# FEATURE FLAGS
# ==================================================
# Enable/disable features in production
FEATURE_ANALYTICS_DASHBOARD=true
FEATURE_ADVANCED_SEARCH=true
FEATURE_RECOMMENDATION_ENGINE=true
FEATURE_A_B_TESTING=true

# ==================================================
# THIRD-PARTY INTEGRATIONS
# ==================================================
# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Email service (for notifications)
EMAIL_SMTP_HOST=smtp.your-provider.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=your-email@domain.com
EMAIL_SMTP_PASSWORD=your-email-password

# Payment processing
STRIPE_PUBLIC_KEY=pk_live_your_stripe_public_key
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key

# CDN Configuration
CDN_URL=https://cdn.your-domain.com
IMAGES_CDN_URL=https://images.your-domain.com

# ==================================================
# SECURITY HEADERS & CSP
# ==================================================
# Content Security Policy
CSP_REPORT_URI=https://your-domain.com/api/csp-report

# ==================================================
# LOGGING LEVELS
# ==================================================
# Application logging level
LOG_LEVEL=info

# Component-specific log levels
DATABASE_LOG_LEVEL=warn
CACHE_LOG_LEVEL=info
AUTH_LOG_LEVEL=warn
API_LOG_LEVEL=info