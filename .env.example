# WooCommerce API Configuration
NEXT_PUBLIC_WC_API_URL=https://your-domain.com/wp-json/wc/v3
WC_CONSUMER_KEY=your_woocommerce_consumer_key
WC_CONSUMER_SECRET=your_woocommerce_consumer_secret

# GitHub Token (for GitHub integration)
GITHUB_TOKEN=your_github_personal_access_token
GH_TOKEN=your_github_token

# Google Analytics
GOOGLE_ANALYTICS_ID=your_ga_measurement_id

# Pinecone Configuration (for semantic search)
PINECONE_API_KEY=your_pinecone_api_key
PINECONE_INDEX_NAME=your_index_name
PINECONE_HOST=your_pinecone_host
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# DeepSeek Configuration (for AI features)
DEEPSEEK_API_KEY=your_deepseek_api_key

# Memgraph Configuration (for graph database)
MEMGRAPH_URL=bolt://localhost:7687
MEMGRAPH_USER=your_memgraph_user
MEMGRAPH_PASSWORD=your_memgraph_password

# Admin Authentication
ADMIN_USERNAME=your_admin_username
ADMIN_PASSWORD=your_secure_admin_password

# API Security (DEPRECATED - use JWT tokens instead)
API_KEY=your_api_key

# JWT Secret (Generate a secure 512-bit secret)
JWT_SECRET=your_jwt_secret_minimum_64_characters_long_and_cryptographically_secure

# Rate Limiting (optional)
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# Environment
NODE_ENV=development